<!DOCTYPE Map>
<!-- Sample Mapnik XML template by Dane Springmeyer -->
<Map srs="+proj=latlong +datum=WGS84" background-color="#A3003C" minimum-version="0.7.2">

  <Style name="lakes-50m">
    <Rule>
      <PolygonSymbolizer fill="#2E4585" />
    </Rule>
  </Style>

  <Layer name="lakes-50m" srs="+proj=latlong +datum=WGS84" status="on">
    <StyleName>lakes-50m</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">podlaskie-latest-free.shp/gis_osm_water_a_free_1.shp</Parameter>
    </Datasource>
  </Layer>

  <Style name="waterways-50m">
    <Rule>
      <LineSymbolizer stroke="#2E4585" stroke-width="0.1" />
    </Rule>
  </Style>

  <Layer name="waterways-50m" srs="+proj=latlong +datum=WGS84" status="on">
    <StyleName>waterways-50m</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">podlaskie-latest-free.shp/gis_osm_waterways_free_1.shp</Parameter>
    </Datasource>
  </Layer>

  <Style name="roads-50m">
    <Rule>
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.2" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'residential'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.3" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'living_street'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.3" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'secondary'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.45" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'secondary_link'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.45" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'primary'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.7" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'primary_link'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.7" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'motorway'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.7" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'motorway_link'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.7" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'trunk'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.7" />
    </Rule>
    <Rule>
      <Filter>[fclass] = 'trunk_link'</Filter> 
      <LineSymbolizer stroke="#DBDBDB" stroke-width="0.7" />
    </Rule>
  </Style>

  <Layer name="roads-50m" srs="+proj=latlong +datum=WGS84" status="on">
    <StyleName>roads-50m</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">podlaskie-latest-free.shp/gis_osm_roads_free_1.shp</Parameter>
    </Datasource>
  </Layer>

</Map>